{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
<div class="container">
    <h1>Nos Service </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TypeService</th>
                <th>MontMens</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.typeService }}</td>
                <td>{{ service.montMens }}</td>
                <td>
                    <a href="{{ path('service_show', {'id': service.id}) }}">show</a>
                    <a href="{{ path('service_edit', {'id': service.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('service_new') }}">Create new</a>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Nos Services{% endblock %}

{% block body %}
<div class="container">
    <h1>Service index</h1>

  <table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Type du service</th>
      <th scope="col">FPrix/Mois</th>
      
    </tr>
  </thead>
        <tbody>
        {% for service in services %}
        {% for vente in service.ventes %}
        {% if app.user.id == vente.client.id %}
            <tr>
                <th>{{ vente.service.typeService }}</th>
                <th>{{ vente.service.montMens }}</th>
            </tr>
        {% endif %}
        {% endfor %}
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user.adresse == null %}
            
                <a href="{{ path('service_new') }}" class="btn btn-success">Create new</a>
    </div>
     {% endif %}
{% endblock %}
